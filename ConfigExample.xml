<?xml version="1.0" encoding="UTF-8"?>
<agent xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="config.xsd">

	<internalConfig>
		<proactiveLocation>/home/vasile/workspacePA/PA_new/trunk</proactiveLocation>
		<java_home>/usr/lib/jvm/java-6-openjdk</java_home>
		<jvm_params>Xmx 256</jvm_params>

		<enable_memory_management>false</enable_memory_management>
		<java_memory>0</java_memory>
		<native_memory>0</native_memory>
		<nb_processes>1</nb_processes>
		<use_all_cpus>false</use_all_cpus>
		<protocol>rmi</protocol>
		<port_initial_value>1099</port_initial_value>

	</internalConfig>

	<events>
		<event xsi:type="CalendarEvent">
			<startDay>friDay</startDay>
			<startHour>17</startHour>
			<startMinute>25</startMinute>
			<startSecond>10</startSecond>
			<durationDays>0</durationDays>
			<durationHours>0</durationHours>
			<durationMinutes>0</durationMinutes>
			<durationSeconds>15</durationSeconds>
			<processPriority>Normal</processPriority>
			<maxCpuUsage>100</maxCpuUsage>
		</event>

		<event xsi:type="IdlenessEvent">
			<beginSecs>5</beginSecs>
			<endSecs>10</endSecs>
			<beginThreshold>10</beginThreshold>
			<endThreshold>20</endThreshold>
		</event>
	</events>


	<actions>
		<action initialRestartDelay="20" xsi:type="AdvertAction">
			<nodeName>advertaction_node</nodeName>
		</action>
		<action initialRestartDelay="100" xsi:type="P2PAction"
			protocol="RMI">
			<contact></contact>
		</action>

		<action initialRestartDelay="5" xsi:type="RMAction" url="node3">
			<nodeName>rmaaction_node</nodeName>
		</action>

	</actions>


</agent>
