#!/bin/sh

PACKAGE="proactive-agent"
INSTALLDIR="/opt/$PACKAGE"
PAGROUP="proactivegroup"
PAUSER="proactive"

# Clean logs and remove INSTALLDIR
if [ -f "$INSTALLDIR/proactive-agent.log" ] 
then
   \rm -f "$INSTALLDIR/proactive-agent.log"
   \rm -f "$INSTALLDIR/proactive-agent.log.*"
fi

# User and group removal
\groupdel $PAGROUP
\userdel -r $PAUSER
