<?xml version="1.0"?>
<agent
  xmlns="urn:proactive:agent:1.0:linux"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="urn:proactive:agent:1.0:linux http://www.activeeon.com/public_content/schemas/proactive/agent/1.0/agent-linux.xsd">
  
  <config>
    <proactiveHome>/path/to/proactive/home</proactiveHome>
    <javaHome>/etc/alternatives/jre</javaHome>

    <!-- 
         If cgroups are available. The following tag can be used to restrict
         the amount of memory available for the proactive-agent and its child processes
    -->
    <!--     <memoryLimit>1000</memoryLimit> -->

    <protocol>pnp</protocol>
    <nice>19</nice>

    <!--
         Since Linux kernel 2.6.25 the IO class idle is available.
         It can be used for better IO isolation
    -->
    <ionice class="besteffort" classdata="7"/>
  </config>

  <events>
    <event>
      <start day="Monday" hour="0"  minute="0" second="0" />
      <duration days="6" hours="23" minutes="59" seconds="59" />
    </event>
  </events>
  
  <connections>
    <localBind enabled="true"/>
  </connections>
</agent>
