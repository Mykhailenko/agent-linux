%{__rm} -rf %{buildroot}
%{__python} setup.py install -O1 --skip-build --root %{buildroot} --record=INSTALLED_FILES

%{__install} -m 0644 -D rpm/agent.xml           %{buildroot}%{_sysconfdir}/proactive/agent.xml
echo "%{_sysconfdir}/proactive/agent.xml" >> INSTALLED_FILES

%{__install} -m 0644 -D rpm/paservice.sysconfig %{buildroot}%{_sysconfdir}/sysconfig/paservice
echo "%{_sysconfdir}/sysconfig/paservice" >> INSTALLED_FILES

%{__install} -m 0755 -D rpm/paservice.init      %{buildroot}%{_initrddir}/paservice
echo "%{_initrddir}/paservice"            >> INSTALLED_FILES

%{__install} -d %{buildroot}%{_localstatedir}/{run,log/paservice}
echo "%attr(-,paservice,paservice) %dir %{_localstatedir}/log/paservice/" >> INSTALLED_FILES



