/usr/bin/getent group paagent >/dev/null  \
	|| /usr/sbin/groupadd -r paagent
/usr/bin/getent passwd paagent >/dev/null \
	|| /usr/sbin/useradd \
		-r \
		-s /sbin/nologin \
		-d %{_localstatedir}/lib/proactive-agent \
		-g paagent \
		-c "ProActive Linux Agent" \
		paagent
/usr/sbin/usermod --home -d %{_localstatedir}/lib/proactive-agent paagent &>/dev/null
exit 0
