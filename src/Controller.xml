<?xml version="1.0" encoding="UTF-8"?>
	<!--
		server bindings: dbus-cxx-xml2cpp - - xml Controller.xml - - adapter
		-f
	-->
	<!--
		client bindings: dbus-cxx-xml2cpp - - xml Controller.xml - - proxy -f
	-->
	<!-- Controller MUST have copy constructor !!! -->
<!DOCTYPE node PUBLIC
"-//freedesktop//DTD D-Bus Object Introspection 1.0//EN"
"http://standards.freedesktop.org/dbus/1.0/introspect.dtd">
	<!--
		<node gen-namespace="Agent" orig-namespace="Agent"
		cppname="Controller" cppinclude="&quot;Controller.h&quot;"
		dest="pa.agent.controller" path="/proactive/agent/Controller" >
	-->
	<!--
		ret = conn->request_name( dest, DBUS_NAME_FLAG_REPLACE_EXISTING );
		//dest should have the same value as below
	-->
<node gen-namespace="DBus" cppname="Controller" cppinclude="&quot;Controller.h&quot;"
	dest="proactive.agent.controller" path="/proactive/agent/Controller">
	<interface name="proactive.agent.controller">
		<method name="SetStartConfiguration">
			<arg type="s" name="security_policy" direction="in" />
			<arg type="s" name="log4j_file" direction="in" />
			<arg type="s" name="proactive_home" direction="in" />
			<arg type="s" name="classpath" direction="in" />
			<arg type="s" name="java_bin" direction="in" />
			<arg type="i" name="success" direction="out" />
		</method>
		<method name="StartNode">
			<arg type="s" name="name" direction="in" />
			<arg type="s" name="java_class" direction="in" />
			<arg type="i" name="pid" direction="out" />
		</method>
		<method name="StartRMNode">
			<arg type="s" name="name" direction="in" />
			<arg type="s" name="java_class" direction="in" />
			<arg type="s" name="user" direction="in" />
			<arg type="s" name="password" direction="in" />
			<arg type="s" name="url" direction="in" />
			<arg type="i" name="pid" direction="out" />
		</method>

		<method name="StartP2PNode">
			<arg type="s" name="name" direction="in" />
			<arg type="s" name="java_class" direction="in" />
			<arg type="s" name="contact" direction="in" />
			<arg type="i" name="pid" direction="out" />
		</method>
		<method name="StartCustomNode">
			<arg type="s" name="name" direction="in" />
			<arg type="s" name="java_class" direction="in" />
			<arg type="s" name="arguments" direction="in" />
			<arg type="i" name="pid" direction="out" />
		</method>

		<method name="StopNode">
			<arg type="i" name="pid" direction="in" />
			<arg type="b" name="dead" direction="out" />

		</method>

		<!--
			<method name="StartWatcher"> <arg type="i" name="pid" direction="in"
			/> </method> <method name="StopWatcher"> <arg type="i" name="pid"
			direction="in" /> </method>
		-->
	</interface>
</node>
	<!--
		y byte u uint i int x int64 t uint64 d double b boolean s string
		adding 'a' in front makes them arrays
	-->