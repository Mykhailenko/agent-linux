# This file represents is the log4cxx config file for the ProActive linux agent.
# It is given as a command line argument when starting the agent

# The default logging level is INFO

log4j.rootLogger=INFO,CLIENT_FILE
 
log4j.logger.Action = INFO
log4j.logger.AdvertAction = INFO
log4j.logger.CalendarEvent = INFO
log4j.logger.ConfigHandler = INFO
log4j.logger.ConfigParser = INFO
log4j.logger.Configuration = INFO
log4j.logger.CustomAction = INFO
log4j.logger.Event = INFO
log4j.logger.IdlenessEvent = INFO
log4j.logger.IdlenessRunner = INFO
log4j.logger.P2PAction = INFO
log4j.logger.RMAction = INFO
log4j.logger.Runner = INFO
log4j.logger.Watcher = INFO
log4j.logger.paagent = INFO
 
################ Appenders ####################
#
# Appender output can be configured by using a pattern layout
# See: http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/PatternLayout.html
#
#   - %c the category of the logging event
#   - %d the date
#	- %L line
#	- %C qualified class name
#   - %m he application supplied message
#   - %n the platform dependent line separator character or characters
#   - %p the priority of the logging event
#   - %t the name of the thread that generated the logging event
#   - %X{hostname}         the hostname 
#   - %X{id@hostname}      the VMID and the hostname 
#   - %X{shortid@hostname} the short VMID and the hostname (a collision can occur between two shortids, you should use id@hostname) 
#   - %X{runtime}          the ProActive runtime url (does not work very well since a different MDC is associated to each thread)


# CONSOLE appender is used by default
log4j.appender.CONSOLE=org.apache.log4j.ConsoleAppender
log4j.appender.CONSOLE.layout=org.apache.log4j.PatternLayout
log4j.appender.CONSOLE.layout.ConversionPattern=%d{dd MMM yyyy HH:mm:ss} %X{shortid@hostname} - [%p %C %L] %m%n


# The log is appended on each run
log4j.appender.CLIENT_FILE=org.apache.log4j.FileAppender

# Appender CLIENT_FILE writes to the file /var/log/paagent/client.log
log4j.appender.CLIENT_FILE.File=/var/log/paagent/client.log

log4j.appender.CLIENT_FILE.Append=true
log4j.appender.CLIENT_FILE.layout=org.apache.log4j.PatternLayout
log4j.appender.CLIENT_FILE.layout.ConversionPattern=%d{dd MMM yyyy HH:mm:ss} %X{shortid@hostname} - [%p %C %L] %m%n
